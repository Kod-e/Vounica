# OpenAI API Key (必須)
OPENAI_API_KEY=sk-xxxxxx

# Database URL (PostgreSQL + asyncpg)
DATABASE_URL=postgresql+asyncpg://vounica:vounicapass@localhost:5432/vounica

# JWT 鍵 (ES256, Base64エンコード)
JWT_PRIVATE_KEY_B64=your_base64_private_key
JWT_PUBLIC_KEY_B64=your_base64_public_key

# Redis と Qdrant
REDIS_URL=redis://redis:6379/0
QDRANT_URL=http://qdrant:6333

# Token quota window (秒単位)
TOKEN_QUOTA_WINDOW=14400

# OpenAI model の選択
OPENAI_MODEL_LOW=gpt-5-nano
OPENAI_MODEL_STANDARD=gpt-5-mini
OPENAI_MODEL_HIGH=gpt-5
OPENAI_EMBED_MODEL=text-embedding-3-small