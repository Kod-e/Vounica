{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Integration Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/integration",
                "-v"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "TEST_MODE": "true"
            }
        },
        {
            "name": "Run Unit Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/unit",
                "-v"
            ],
        },
        {
            "name": "Run Question Agent Test",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/unit/agent/question",
                "-v",
                "-s"
            ],
        },
        {
            "name": "Run Current Test",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}",
                "-v"
            ],
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "TEST_MODE": "true"
            }
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Run FastAPI",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
              "PYTHONPATH": "${workspaceFolder}",
              "UVICORN_RELOAD": "false",
              "UVICORN_HOST": "0.0.0.0",
              "UVICORN_PORT": "8000",
              "PYTHONASYNCIODEBUG": "1"
            }
          }
    ]
}